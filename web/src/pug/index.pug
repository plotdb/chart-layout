doctype html
html
  include /../../static/assets/lib/bootstrap.ldui/main/index.pug
  head
    +css("/assets/lib/bootstrap/main/css/bootstrap.min.css")
    +css("/assets/lib/bootstrap.ldui/main/bootstrap.ldui.min.css")
    +css("/assets/lib/@loadingio/transition.css/main/transition.min.css")
    +css("/css/index.css")
    style(type="text/css"): :stylus
      .cell
        padding: 1em
      svg
        width: 100%
        height: 100%
        background: rgba(0,0,0,.1)
      .chart
        position: relative
      .chart-layout
        z-index: 0
        position: absolute
        width: 100%
        height: 100%
        display: grid
        grid-template-columns: 6em 1fr
        grid-template-rows: 1fr 4em
      .chart-render
        z-index: 1
        position: absolute
        width: 100%
        height: 100%
  body
    .w-100.h-100.p-4
      .w-100.h-100.chart
        .chart-layout.bg-light.border.rounded
          .bg-danger.cell(name="yaxis")
          .bg-dark.cell(name="view")
          .bg-info.cell
          .bg-primary.cell(name="xaxis")
        .chart-render
          svg
            g.yaxis
            g.view: rect(ld-each="data")
            g
            g.xaxis

    +script("/assets/lib/@loadingio/ldquery/main/ldq.min.js")
    +script("/assets/lib/ldview/main/ldview.min.js")
    +script("/assets/lib/@loadingio/debounce.js/main/debounce.min.js")

    +script("https://d3js.org/d3.v4.js")
    +script("https://d3js.org/d3-format.v2.min.js")
    +script("https://d3js.org/d3-array.v2.min.js")
    +script("https://d3js.org/topojson.v2.min.js")
    +script("https://d3js.org/d3-color.v1.min.js")
    +script("https://d3js.org/d3-interpolate.v1.min.js")
    +script("https://d3js.org/d3-scale-chromatic.v1.min.js")
    +script("https://d3js.org/d3-dispatch.v2.min.js")
    +script("https://d3js.org/d3-quadtree.v2.min.js")
    +script("https://d3js.org/d3-timer.v2.min.js")
    +script("https://d3js.org/d3-force.v2.min.js")

    +script("/js/index.js")

